      "source": [
        "lst = []\n",
        "error = 0\n",
        "while True:\n",
        "  num = input(\"введите число: \")\n",
        "  if num == \"стоп\":\n",
        "    break\n",
        "\n",
        "  try:\n",
        "    num = int(num)\n",
        "    lst.append(num)\n",
        "  except ValueError:\n",
        "    error+=1\n",
        "    print(\"это не число\")\n",
        "  except Exception as e:\n",
        "    error+=1\n",
        "    print(f\"что-то пошло не так: {e}\")\n",
        "  else:\n",
        "    print(\"число добавлено в список\")\n",
        "\n",
        "print(f\"итоговый список: {lst}\")\n",
        "print(f\"количество ошибок: {error}\")\n",
        "print(f\"чисел введено успешно: {len(lst)}\")\n",
        "\n",
        "\n",
        "\n",
        "\n"
      ]
